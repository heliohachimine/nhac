<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.listActivity.ListActivity"
    android:background="@color/orange_300">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:text="Alimentos saudÃ¡veis"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/slimebox"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.helio.nhac.presentation.Model.GridRecyclerView
        android:id="@+id/recycler_view_layout_recycler"
        android:layout_width="match_parent"
